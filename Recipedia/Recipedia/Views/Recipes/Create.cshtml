@model Recipedia.Models.Recipe

<h2>Add Recipe</h2>

<form asp-action="Create" method="post">
	<div>
		<label asp-for="Title"></label>
		<input asp-for="Title" />
	</div>
	<div>
		<label asp-for="Ingredients"></label>
		<textarea asp-for="Ingredients"></textarea>
	</div>
	<div>
		<label asp-for="Instructions"></label>
		<textarea asp-for="Instructions"></textarea>
	</div>
	<div>
		<label asp-for="Category"></label>
		<select asp-for="Category">
			<option>Breakfast</option>
			<option>Lunch</option>
			<option>Dinner</option>
			<option>Snack</option>
		</select>
	</div>
	<div>
		<label asp-for="CookTimeMinutes"></label>
		<input asp-for="CookTimeMinutes" type="number" />
	</div>
	<div>
		<label asp-for="Difficulty"></label>
		<select asp-for="Difficulty">
			<option>Easy</option>
			<option>Medium</option>
			<option>Hard</option>
		</select>
	</div>
	<button type="submit">Add Recipe</button>
</form>