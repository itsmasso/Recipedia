@model Recipedia.Models.GeneratedRecipeResultDTO

<div class="container mt-4">
    <h1>@Model.Title</h1>
    <h2>@Model.CookTimeMinutes minutes</h2>
    <h2>@Model.Category</h2>
    <h2>@Model.Difficulty</h2>
    <h4>Ingredients</h4>
    <ul>
        @foreach (var ingredient in Model.Ingredients)
        {
            <li>@ingredient</li>
        }
    </ul>

    <h4>Instructions</h4>
    <ol>
        @foreach (var step in Model.Instructions)
        {
            <li>@step</li>
        }
    </ol>

    <div>
        <div class="mt-3">
            <a asp-action="GenerateRecipe" class="btn btn-secondary">🔙 Back</a>
        </div>
        <form asp-action="SaveRecipe" asp-controller="Recipes" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="CookTimeMinutes" />
            <input type="hidden" name="Category" value="@Model.Category" />
            <input type="hidden" name="Difficulty" value="@Model.Difficulty" />

            @for (int i = 0; i < Model.Ingredients.Count; i++)
            {
                <input type="hidden" name="Ingredients[@i]" value="@Model.Ingredients[i]" />
            }

            @for (int i = 0; i < Model.Instructions.Count; i++)
            {
                <input type="hidden" name="Instructions[@i]" value="@Model.Instructions[i]" />
            }

            <button type="submit" class="btn btn-primary">Save Recipe</button>
        </form>
    </div>

</div>