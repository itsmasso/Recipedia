@model Recipedia.Models.GeneratedRecipeResultDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #f5f5f5;
            width: 100%;
        }

        .generated-recipe-body {
            width: 100%;
        }

        .generated-recipe-header {
            background-color: #8faa67;
            padding: 40px 50px;
            margin-bottom: 30px;
        }

        .generated-recipe-header-container h2 {
            color: white;
            font-weight: 300;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .generated-recipe-header-container h1 {
            color: white;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .recipe-tags-container {
            margin-top: 20px;
        }

        .recipe-tag {
            display: inline-block;
            border: 1px solid white;
            border-radius: 25px;
            padding: 8px 16px;
            margin-right: 15px;
            color: white;
        }

        .tag-title {
            font-size: 11px;
            opacity: 0.9;
            display: block;
        }

        .tag-value {
            font-size: 14px;
            font-weight: 500;
            display: block;
            margin-top: 2px;
        }

        .generated-recipe-content {
            padding: 0 50px 40px 50px;
            width: 100%;
        }

        .generated-recipe-ingredients {
            background-color: white;
            padding: 30px 25px;
            border-radius: 12px;
            margin-bottom: 25px;
            width: 100%;
        }

        .generated-recipe-directions {
            background-color: white;
            padding: 30px 25px;
            border-radius: 12px;
            width: 100%;
        }

            .generated-recipe-ingredients h4,
            .generated-recipe-directions h4 {
                font-size: 28px;
                margin-bottom: 20px;
                color: #333;
                border-bottom: 2px solid #8faa67;
                padding-bottom: 10px;
            }

        ul {
            list-style-type: disc;
            padding-left: 25px;
            margin-top: 10px;
        }

        ol {
            list-style-type: decimal;
            padding-left: 25px;
            margin-top: 10px;
        }

        li {
            margin-bottom: 12px;
            line-height: 1.6;
            color: #444;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="generated-recipe-body">
        <div class="generated-recipe-header">
            <div class="generated-recipe-header-container">
                <h2>@Model.Category</h2>
                <h1>@Model.Title</h1>
                <div class="recipe-tags-container">
                    <div class="recipe-tag">
                        <span class="tag-title">Time</span>
                        <span class="tag-value">@Model.CookTimeMinutes minutes</span>
                    </div>
                    <div class="recipe-tag">
                        <span class="tag-title">Difficulty</span>
                        <span class="tag-value">@Model.Difficulty</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="generated-recipe-content">
            <div class="generated-recipe-ingredients">
                <h4>Ingredients</h4>
                <ul>
                    @foreach (var ingredient in Model.Ingredients)
                    {
                        <li>@ingredient</li>
                    }
                </ul>
            </div>
            <div class="generated-recipe-directions">
                <h4>Instructions</h4>
                <ol>
                    @foreach (var step in Model.Instructions)
                    {
                        <li>@step</li>
                    }
                </ol>
            </div>
        </div>
    </div>
</body>
</html>