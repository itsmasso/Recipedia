<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recipedia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Recipedia.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/recipes.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/modals.css" />
    <link rel="stylesheet" href="~/css/FindRecipe.css" />
    <link rel="stylesheet" href="~/css/MyRecipes.css" />
    <link rel="stylesheet" href="~/css/GenerateRecipe.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/Policy.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400..800&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <a class="navbar-logo" asp-controller="Home" asp-action="Index">
					<img src="~/Images/Recipedia-logo.png" alt="Recipedia Logo" />
                </a>
                <ul class="navbar-links">
                    <li><a asp-controller="FindRecipe" asp-action="Index">Find Recipes</a></li>
                    <li><a asp-controller="Recipes" asp-action="Index">My Recipes</a></li>
                    <li><a asp-controller="Recipes" asp-action="GenerateRecipe">Generate Recipe</a></li>
                </ul>
                <ul class="navbar-links">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="profile-dropdown">
                            <details>
                                <summary class="sign-in-btn">
                                    <i class="bi bi-person-fill"></i> @User.Identity.Name
                                </summary>
                                <ul class="dropdown-list">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-btn">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </details>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="sign-in-btn" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-person-fill"></i> Sign In
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-wrapper">
        <div class="footer-container">
            <div class="footer-links">
                <a asp-controller="Home" asp-action="Terms">Terms of Use</a>
                <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>
            <span class="footer-copyright">&copy; 2025 Recipedia</span>  
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
